<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView_bigpic" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>
    <android.support.v4.view.ViewPager
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pager" android:layout_centerInParent="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_camera" android:layout_centerHorizontal="true"
            android:alpha="0.5" android:maxHeight="48dp"
            android:maxWidth="48dp" android:minHeight="48dp" android:minWidth="48dp"
            android:clickable="true"
            android:background="@drawable/blue_camera_icon_48" android:layout_alignParentBottom="true"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=" &lt;"
            android:id="@+id/button_left" android:textColor="#ffffff"
            android:textSize="@dimen/nb_font_size" android:textStyle="bold" android:longClickable="false"
            android:alpha="0.33" android:enabled="true" android:layout_gravity="left"
            android:layout_alignParentLeft="true" android:clickable="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="&gt; "
            android:id="@+id/button_right" android:enabled="true"
            android:layout_gravity="right" android:alpha="0.33"
            android:layout_weight="0.16" android:textColor="#ffffff"
            android:textStyle="bold" android:textSize="@dimen/nb_font_size"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:clickable="true"
            android:layout_alignParentRight="true"/>
</RelativeLayout>